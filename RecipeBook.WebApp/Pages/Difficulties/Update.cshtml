@page
@model RecipeBook.WebApp.Pages.Difficulties.UpdateModel
@{
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class=" row pb-2">
            <h2 class="text-primary pl-3">Update Difficulty</h2>
            <hr />
        </div>
        <div class=" mb-3">
            <label asp-for="@Model.Difficulty.Id"></label>
            <input asp-for="@Model.Difficulty.Id" class="form-control" />
        </div>

        <div class=" mb-3">
            <label asp-for="@Model.Difficulty.Name"></label>
            <input asp-for="@Model.Difficulty.Name" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>


    </div>

</form>
<button class="btn btn-secondary" onclick="window.history.back()">Go Back</button>