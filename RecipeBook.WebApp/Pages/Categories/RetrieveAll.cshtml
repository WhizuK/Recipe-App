@page
@model RecipeBook.WebApp.Pages.Categories.RetrieveAllModel
@{
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.categories)
        {
            <tr>
                <th scope="row">@category.Id</th>
                <td>@category.Name</td>


                <td>
                    <a asp-area="" asp-page="/Categories/Update" asp-route-id="@category.Id"> Update </a> 
                    <a asp-area="" asp-page="/Categories/Delete" asp-route-id="@category.Id"> Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>