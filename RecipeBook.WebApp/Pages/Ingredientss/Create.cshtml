@page
@model RecipeBook.WebApp.Pages.Ingredientss.CreateModel
@{
}
<button class="btn btn-secondary" onclick="window.history.back()">Go Back</button>

<form method="post">
    <div class="border p-3 mt-4">
        <div class=" row pb-2">
            <h2 class="text-primary pl-3">Create Ingredient</h2>
            <hr />
        </div>

        <div class=" mb-3">
            <label asp-for="@Model.Ingredient.IngredientName"></label>
            <input asp-for="@Model.Ingredient.IngredientName" class="form-control" />
        </div>


        <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>


    </div>

    <h2>All Ingredients </h2>
    <table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
                @foreach (var ingredient in Model.ingredients)
                {
                <tr>
                        <th scope="row">@ingredient.Id</th>
                        <td>@ingredient.IngredientName</td>


                    <td>
                            <a asp-area="" asp-page="/Ingredientss/Update" asp-route-id="@ingredient.Id"> Update </a>
                        <a asp-area="" asp-page="/Ingredientss/Delete" asp-route-id="@ingredient.Id"> Delete </a>
                    </td>
                </tr>
                }
    </tbody>
</table>
</form>
